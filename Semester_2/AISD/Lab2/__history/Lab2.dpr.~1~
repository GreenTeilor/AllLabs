program Lab2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type
  pt = ^elem;
  elem = record
           koef: integer;
           power: integer;
           next: pt;
         end;

procedure makeList(x: pt);
var
  i, N: integer;
  ref: pt;
begin
  write('Введите количество одночленов в многочлене: ');
  readln(N);
  new(x);
  ref := x;
  for i := 1 to N do
  begin
    new(x^.next);
    x := x^.next;
    write('Введите коэффициент ', i, ' одночлена: ');
    readln(x^.koef);
    write('Введите степень ', i, ' одночлена: ');
    readln(x^.power);
  end;
  x^.next := nil;
end;

var
  header: pt;
begin

end.
