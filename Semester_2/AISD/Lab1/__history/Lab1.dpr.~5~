program Lab1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

const
    N = 7;

type elem = ^list;
list = record
         lastName: string;
         age: string;
         next: elem;
end;

function isValidNumber(number: string): boolean;
var
  numberInt: integer;
begin
  if (tryStrToInt(trim(number), numberInt)) and (length(trim(number)) = 7) then
    isValidNumber := true
  else
    isValidNumber := false;
end;

procedure makeList(var x: elem);
var
  i: integer;
  xRef: pointer;
begin
  new(x);
  xRef := x;
  for i := 1 to N do
  begin
    new(x^.next);
    x := x^.next;
    write('Введите фамилию ', i, ' пользователя: ');
    readln(x^.lastName);
    repeat
      write('Введите номер телефона ', i, ' пользователя: ');
      readln(x^.age);
      if not(isValidNumber(x^.age)) then
        writeln('Ошибка ввода!');
    until isValidNumber(x^.age);
  end;
  x^.next := nil;
  x := xRef;
end;

procedure sortList(var x: elem);
var arr: array of array of string;
    i, j: integer;
    temp: string;
    ref: elem;
begin
  ref := x;
  x := x^.next;
  i := 0;
  while x<>nil do
  begin
    inc(i);
    setLength(arr, i, 2);
    arr[i-1,0] := x^.lastName;
    arr[i-1,1] := x^.age;
    x := x^.next;
  end;
  for i := 0 to length(arr) - 2 do
    for j := 0 to length(arr) - i - 2 do
      if arr[j, 0] > arr[j + 1, 0] then
      begin
        temp := arr[j, 0];
        arr[j, 0] := arr[j+1, 0];
        arr[j+1, 0] := temp;
        temp := arr[j, 1];
        arr[j, 1] := arr[j+1, 1];
        arr[j+1, 1] := temp;
      end;
  x := ref;
  for i := 0 to length(arr) - 1 do
  begin
    x := x^.next;
    x^.lastName := arr[i, 0];
    x^.age := arr[i, 1];
  end;
  x := ref;
end;

procedure searchNumber(x: elem; phoneNumber: string);
var
  i: integer;
  flag: boolean;
begin
  x := x^.next;
  flag := false;
  while x <> nil do
  begin
    if trim(x^.age) = trim(phoneNumber) then
    begin
      writeln(trim(x^.lastName),' ', trim(x^.age));
      if not(flag) then
        flag := true;
    end;
    x := x^.next;
  end;
  if not(flag) then
    writeln('Пользователей с таким номером нет!');
end;

procedure searchLastName(x: elem; lastName: string);
var
  i: integer;
  flag1, flag2: boolean;
begin
  x := x^.next;
  flag1 := false;
  flag2 := false;
  while (x <> nil) and not(flag2) do
  begin
    if trim(x^.lastName) = trim(lastName) then
    begin
      flag1 := true;
      while (x <> nil) and (trim(x^.lastName) = trim(lastName)) do
      begin
        writeln(trim(x^.lastName),' ', trim(x^.age));
        x := x^.next;
      end;
      flag2 := true;
    end;
    if not(flag2) then
      x := x^.next;
  end;
  if not(flag1) then
    writeln('Пользователей с такой фамилией нет!');
end;

procedure printList(x: elem);
begin
  x := x^.next;
  while x <> nil do
  begin
    writeln(trim(x^.lastName),' ', trim(x^.age));
    x := x^.next;
  end;
end;


var
  first: elem;
  num, name: string;
begin
  makeList(first);
  sortList(first);
  printList(first);
  write('Введите искомый номер: ');
  readln(num);
  searchNumber(first, num);
  write('Введите искомую фамилию: ');
  readln(name);
  searchLastName(first, name);
  readln;
end.
