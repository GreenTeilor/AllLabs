program Lab8;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var pascalTriangle: array[1..15] of integer;
    n, error, i, j, k: integer;
    nStr: string;
    F: textFile;

begin
  AssignFile(F, 'pscTrg.txt');
  Rewrite(F);
  repeat
    write('Введите количество строк треугольника Паскаля:');
    readln(nstr);
    Val(nStr,n,error);
    if (error <> 0) or not ((n >= 1) and (n <= 15)) then
      writeln('Ошибка ввода!');
  until (error = 0) and ((n >= 1) and (n <= 15));
  pascalTriangle[1] := 1;
  for i := 1 to n do
  begin
    for j := 2 to i do
    begin
      pascalTriangle[j] := 0;
      for k := j downto 2 do
        pascalTriangle[k] := pascalTriangle[k-1] + pascalTriangle[k];
    end;
   for k := 1 to i do
     write(F, pascalTriangle[k]:6);
   writeln(F);
  end;
  CloseFile(F);
  readln;
end.
