program Lab3Exp1;
//Program exclude repeating elements

//Console app
{$APPTYPE CONSOLE}

{$R *.res}

//Modules declaration
uses
  System.SysUtils;

//Constants declaration
const
  N = 10;

//Variables declaration
Var Mas:array[1..N] of real;
    MasStr: array [1..N] of String;
    i, j, k, Size, Error: integer;
  { Mas - array
    MasStr - Mistakes checker
    i - counter 1
    j - counter 2
    k - counter 3
    Size - current size of array
    Error - variable which is 1 if user made a mistake and 0 if not }

//Start the program
Begin
  //Set Error to the original value
  Error := 1;

  //Inputting array elements
  for i:=1 to n do
  begin

    //Protection from mistakes
    repeat
      write('Mas[',i,'] = ');
      readln(MasStr[i]);
      val(MasStr[i], Mas[i], error);

      //If mistake happened warn about it
      if error <> 0 then
      writeln('Пожалуйста, введите вещественное число');

    //If Error = 1 repeat the cycle
    until error = 0;

  end;

  //Output original array
  writeln('Исходный массив');
  for i:=1 to N do
  write(Mas[i]:6:2);

  //Remember the original size of array
  Size:=N;

  //Set i to the original value
  i:=0;

  //Entering the cycle
  while i < Size do
  begin

    //Increment i
    inc(i);

    //Make j equals to i
    j:=i;

    //Entering the cycle
    While j<Size do
    begin

      //Increment of j
      inc(j);

      //If repeated element was found
      if Mas[i]=Mas[j] then
      begin
        For k:=j to Size-1 do

        //Move elements to the left
        Mas[k]:=Mas[k+1];

        //Decrease size of array
        dec(Size);

        //If number repeated more than once
        j := i;

      end;
    end;
  end;
  writeln;

  //Output new array
  writeln('Преобразованный массив');
  for i:=1 to Size do
  write(Mas[i]:6:2);

  //Final operations
  readln;
End.
