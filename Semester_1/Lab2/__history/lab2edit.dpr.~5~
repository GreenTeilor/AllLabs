  I := 2; {первый делитель 2}
  while Sum2 > 1 do
  begin {пока число не 1}
    if Sum2 mod I = 0 then
    begin {если число делитс€ на очередной делитель}
      x := I;
      Sum1 := 0;
      while x<>0 do
      begin
        Sum1 := Sum1 + (x mod 10);
        x := x div 10;
      end;
