program lab2edit;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;
var N, N1, N56, N57, N59, I, Sum1, Sum2, Sum3, x, Sum_Common, Sum_Common2, Sum_Common3, k, k1: Integer;
    N2, N58: real;
    flag1, flag2, flag3: boolean;

begin
  writeln('Введите номер вашего Супер-числа Смита со спец условием:');
  k := 0;
  readln(k1);
  N := 4;
  while k < k1 do
  begin
  flag1 := false;
  flag2 := false;
  flag3 := false;
//This part of code finds sum of all digits of simple  multipliers
  N56 := N;
  N57 := N;
  N59 := N;
  N1 := N;
  I := 2; {первый делитель 2}
  Sum_Common := 0;
  while N > 1 do
  begin {пока число не 1}
    if N mod I = 0 then
    begin {если число делится на очередной делитель}
      x := I;
      Sum1 := 0;
      while x<>0 do
      begin
        Sum1 := Sum1 + (x mod 10);
        x := x div 10;
      end;
      Sum_Common := Sum_Common + Sum1;
      N := N div I; {делим число}
    end
    else
    I := I + 1; {увеличиваем делитель}
  end; {while}
  writeln('Сумма цифр простых множителей исходного числа:',Sum_Common);




//This part of code finds sum of all numbers of number
  Sum2 := 0;
  while N1<>0 do
  begin
    Sum2 := Sum2 + (N1 mod 10);
    N1 := N1 div 10;
  end;
  writeln('Сумма всех цифр исходного числа:',Sum2);




//This part of code compares value of Sum_Common and Sum2
if (Sum2 = Sum_Common) and (I <> N56) then
begin
writeln('Ваше число - число смита!!!');
flag1 := true;
end
else
writeln('Увы, ваше число - не число Смита');



//This part of code checks if sum of all numbers of original number is Smyth number too
  N1 := Sum2;
  N56 := Sum2;
  I := 2; {первый делитель 2}
  Sum_Common2 := 0;
  while Sum2 > 1 do
  begin {пока число не 1}
    if Sum2 mod I = 0 then
    begin {если число делится на очередной делитель}
      x := I;
      Sum1 := 0;
      while x<>0 do
      begin
        Sum1 := Sum1 + (x mod 10);
        x := x div 10;
      end;
      Sum_Common2 := Sum_Common2 + Sum1;
      Sum2 := Sum2 div I; {делим число}
    end
    else
    I := I + 1; {увеличиваем делитель}
  end; {while}
  writeln('Сумма цифр простых множителей числа, являющегося суммой цифр исходного числа:',Sum_Common2);
//This part of code finds sum of all digits of sum of all digits of original number
  Sum3 := 0;
  while N1<>0 do
  begin
    Sum3 := Sum3 + (N1 mod 10);
    N1 := N1 div 10;
  end;
  writeln('Сумма цифр числа, являющегося суммой цифр исходного числа:',Sum3);




//This part of code checks if sum of all digits of original number is Smyth number
  if (Sum3 = Sum_Common2) and (I <> N56) then
  begin
  writeln('Ваше число - супер число Смита!!!');
  flag2 := true;
  end
  else
  writeln('Увы, ваше число - не супер число Смита');


//This part of code checks if original number is a full square
  N2 := sqrt(N57);
  N58 := N2;
  if N2 = trunc(N2) then
  begin
    N57 := trunc(N2);
    I := 2; {первый делитель 2}
    while N2 > 1 do
    begin {пока число не 1}
      if trunc(N2) mod I = 0 then
      begin {если число делится на очередной делитель}
        N2 := trunc(N2) div I; {делим число}
      end
      else
      I := I + 1; {увеличиваем делитель}
    end; {while}
  end;
  if N58 = I then
  begin
  writeln('Ваше число - полный квадрат!');
  flag3 := true;
  end
  else
  writeln
  ('Ваше число - не полный квадрат');
  if (flag1 = true) and (flag2 = true) and (flag3 = true) then
  k := k + 1;
  N59 := N59 + 1;
  N := N59;
  end;
  writeln('Ваше число:',N-1);


//Final operations
ReadLn;
end.
