{
    "compilerOptions": {
        "target": "es2017",
        "rootDir": "./",
        "outDir": "./build",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "package.json"
    ]
}